---
import BaseLayout from "../layouts/BaseLayout.astro";
import hero from "../assets/hero.jpg"; // ✅ import image (Astro optimizes)
import hydro from "../assets/cards/hydro.jpg";
import pests from "../assets/cards/pests.jpg";
import eco from "../assets/cards/eco-tech.jpg";
---
<BaseLayout title="Slate & Moss — Modern living, naturally inspired.">
  <section class="grid gap-6 md:grid-cols-2 items-center mb-10">
    <div class="space-y-4">
      <p class="kicker">Eco‑tech × Urban greenery</p>
      <h1 class="text-4xl md:text-5xl font-bold">Modern living, naturally inspired.</h1>
      <p class="text-lg">We explore the intersection of eco‑friendly tech and condo‑friendly plants—gear, guides, and ideas that make sustainable living stylish and practical.</p>
      <div class="flex gap-3">
        <a class="btn" href="/guides">Explore guides</a>
        <!--<a class="btn" href="/eco-tech">Eco‑Tech</a> -->
        <!--<a class="btn" href="/plant-living">Plant Living</a> -->
      </div>
    </div>

    <!-- NEW: hero image (responsive, lazy) -->
    <img
      src={hero.src}
      width={hero.width}
      height={hero.height}
      alt="Plants and clean eco‑tech on a modern slate shelf"
      class="rounded-2xl border border-[var(--border)] shadow-sm w-full h-auto object-cover"
      loading="eager"
      decoding="async"
    />
  </section>

  <section class="grid gap-6 md:grid-cols-3">
    <article class="card">
      <img src={hydro.src} width={hydro.width} height={hydro.height} alt="Hydroponics" class="mb-3 w-full h-36 object-cover rounded-xl"/>
      <p class="kicker">Guide</p>
      <h3 class="text-xl font-semibold"><a class="no-underline" href="/guides/compact-hydroponics-condo">Compact Hydroponics Kits That Actually Work in a Condo</a></h3>
      <p class="text-sm">What to buy, where to put it, and which herbs thrive.</p>
    </article>
    <article class="card">
      <img src={pests.src} width={pests.width} height={pests.height} alt="Plant pests" class="mb-3 w-full h-36 object-cover rounded-xl"/>
      <p class="kicker">How‑To</p>
      <h3 class="text-xl font-semibold"><a class="no-underline" href="/guides/indoor-pests-without-killing-good-bugs">Deal With Indoor Plant Pests (Without Nuking Your Good Bugs)</a></h3>
      <p class="text-sm">Handle mites and gnats while keeping springtails alive.</p>
    </article>
    <article class="card">
      <img src={eco.src} width={eco.width} height={eco.height} alt="Eco tech" class="mb-3 w-full h-36 object-cover rounded-xl"/>
      <p class="kicker">Roundup</p>
      <h3 class="text-xl font-semibold"><a class="no-underline" href="/guides/eco-tech-that-pays-for-itself">Eco‑Friendly Tech That Pays for Itself in Small Spaces</a></h3>
      <p class="text-sm">Smart plugs, compact composters, and small HEPA purifiers that actually save money in condos.</p>
    </article>
  </section>
</BaseLayout>
